<% layout('layout/boilerplate.ejs') %>

<style>
    .listing-container {
        margin-top: 10px; /* Adjust the margin as needed */
    }
</style>

<h1>All Listings</h1>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 row-cols-1 listing-row me-5">
    <% for (let listing of allListing) { %>
        <div class="col mb-4">
            <div class="card h-100">
                <img src="<%= listing.image %>" class="card-img-top" alt="Listing Image">
                <div class="card-body">
                    <h5 class="card-title"><%= listing.title %></h5>
                    <p class="card-text">
                        <% if (listing.price != null) { %>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %>
                        <% } else { %>
                            Price not available
                        <% } %>
                    </p>
                </div>
                <div class="card-footer">
                    <a href="/listing/<%= listing._id %>" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    <% } %>
</div>
