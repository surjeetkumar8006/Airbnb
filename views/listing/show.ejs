<% layout('layout/boilerplate.ejs') %>

<div class="container py-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1 class="title-display text-center"><%= listing.title %></h1>

      <div class="card mb-5 shadow-sm border-0 rounded-lg">
        <img
          src="<%= listing.image %>"
          class="card-img-top rounded-top"
          alt="Listing Image"
          onerror="this.src='https://via.placeholder.com/600x300';"
        />
        <div class="card-body p-4">
          <p class="card-text">
            <strong>Description:</strong> <%= listing.description %><br /><br />
            <strong>Price:</strong>
            <% if (listing.price != null) { %> &#8377; <%=
            listing.price.toLocaleString("en-IN") %><br /><br />
            <% } else { %> Price not available<br /><br />
            <% } %>
            <strong>Location:</strong> <%= listing.location %><br /><br />
            <strong>Country:</strong> <%= listing.country %>
          </p>
          <div class="d-flex justify-content-between align-items-center mb-4">
            <a href="/listing/<%= listing._id %>/edit" class="btn btn-primary">Edit Listing</a>
            <form action="/listing/<%= listing._id %>?_method=DELETE" method="post">
              <button class="btn btn-danger">Delete Listing</button>
            </form>
          </div>
        </div>
      </div>

      <!-- Review Form -->
      <div class="mt-5">
        <h4 class="mb-3">Leave a Review</h4>
        <form action="/listing/<%= listing._id %>/reviews" method="post" class="needs-validation" novalidate>
          <div class="form-group mb-4">
            <label for="rating">Rating</label>
            <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-control" />
          </div>
          <div class="form-group mb-4">
            <label for="comment">Comment</label>
            <textarea name="review[text]" id="comment" class="form-control" rows="5" required></textarea>
            <div class="invalid-feedback">Please provide a review</div>
          </div>
          <button class="btn btn-success">Submit Review</button>
        </form>
      </div>

      <!-- Display Reviews -->
      <hr />
      <% if (listing.reviews && listing.reviews.length > 0) { %>
        <% listing.reviews.forEach(function(review) { %>
        <div class="card mb-3 shadow-sm border-0 rounded-lg">
          <div class="card-body">
            <h5 class="card-title">
              <i class="fas fa-star" style="color: #ffd700"></i> Rating: <%= review.rating %>/5
            </h5>
            <p class="card-text"><%= review.text %></p>
            <p class="text-muted">
              <i class="fas fa-user" style="color: #666"></i>
              Reviewed by <%= review.author ? review.author.username : "Anonymous" %>
            </p>
            <form action="/listing/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
        <% }); %>
      <% } else { %>
        <p class="text-muted">No reviews yet.</p>
      <% } %>
    </div>
  </div>
</div>

<style>
  .title-display {
    font-size: 40px;
    font-weight: bold;
    color: #333;
  }
  .card-img-top {
    width: 100%;
    height: auto;
    max-height: 500px;
    object-fit: cover;
  }
  .card-body {
    padding: 20px;
  }
  .card-text {
    font-size: 18px;
  }
  .form-control {
    padding: 10px;
    font-size: 18px;
  }
  textarea {
    height: 150px;
  }
  .btn {
    padding: 10px 20px;
    font-size: 18px;
  }
</style>

<script>
  (function () {
    "use strict";
    window.addEventListener("load", function () {
      var forms = document.getElementsByClassName("needs-validation");
      Array.prototype.filter.call(forms, function (form) {
        form.addEventListener("submit", function (event) {
          if (form.checkValidity() === false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        }, false);
      });
    }, false);
  })();
</script>